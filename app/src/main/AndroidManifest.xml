            android:name=".SavedStoriesActivity"
            android:label="@string/title_activity_saved_stories"
            android:theme="@style/Theme.TOI.NoActionBar" />
        <activity android:name=".views.MainActivity" />
        <activity android:name=".views.HomeScreen"/>
            <activity android:name=".Splash_ScreenActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>